{
  "name": "notion-mcp-server",
  "version": "1.1.0",
  "description": "Minimal Notion API middleware for MCP/GPT proxy",
  "type": "module",
  "main": "server.mjs",
  "engines": { "node": ">=18.17" },
  "scripts": {
    "dev": "node --watch server.mjs",
    "start": "node server.mjs",
    "health": "node -e \"fetch('http://127.0.0.1:'+ (process.env.PORT||3000) +'/healthz').then(r=>r.text()).then(console.log).catch(e=>{console.error(e);process.exit(1)})\""
  },
  "dependencies": {
    "@notionhq/client": "^2.3.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.2",
    "helmet": "^7.2.0"
  }
}
